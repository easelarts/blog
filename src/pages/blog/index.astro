---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-teal-50">
		<Header />
		<main class="flex flex-col items-center min-h-screen ">
			<section class="w-4/5">
				<ul class="flex flex-wrap list-none m-0 p-0">
					{
						posts.map((post, index) => (
							<li class={`${index === 0 ? 'w-full' : 'w-full md:w-1/2'} pl-2 pt-2 text-center md:text-left decoration-0 ease-linear duration-200 first:mb-0 md:first:mb-4 first:text-center  md:first:text-2xl `}>
								<a href={`/blog/${post.slug}/`}>
									<img class=" w-auto mb-2 rounded-lg" src={post.data.heroImage} alt="" />
									<h4 class="m-0 text-slate-900 leading-none">{post.data.title}</h4>
									<p class="m-0 text-slate-700">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>


